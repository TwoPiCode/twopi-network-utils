{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true,
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "strict": [2, "never"],
    "semi-spacing": [2, {"before": false, "after": true}],
    "comma-dangle": 0,
    "eqeqeq": [2, "smart"],
    "semi": [2, "never"],
    "indent": ["error", 2],
    "no-console": [2, { "allow": ["info", "warn", "error"] }],
    "no-var": 1,
    "no-mixed-spaces-and-tabs": 2
  }
}
